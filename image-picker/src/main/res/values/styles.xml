<resources>

    <style name="AppTheme.ImagePicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>
    <style name="PixAppTheme" parent="AppTheme.ImagePicker">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="ImageEditTheme" parent="AppTheme.ImagePicker">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity"/>
    <style name="ThemeOverlay.ExamShare.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
</resources>
